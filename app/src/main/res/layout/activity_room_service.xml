<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".roomService"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".roomService"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp"
            app:srcCompat="@drawable/roomservice2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/steak2"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image2"
                android:layout_marginTop="15dp"
                android:text="Rib Eye Steak"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image2"
                android:layout_below="@id/text1"
                android:text="Reverse seared rib eye steak served with a side of mashed potatoes and steamed vegetables"
                android:textSize="10sp"/>

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image2"
                android:text="80 NIS" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="200dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/chicken"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image3"
                android:layout_marginTop="15dp"
                android:text="Grilled Chicken"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image3"
                android:layout_below="@id/text3"
                android:text="Grilled chicken with a side of fries and salad"
                android:textSize="10sp"/>

            <CheckBox
                android:id="@+id/checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text4"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image3"
                android:text="60 NIS" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="200dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/chickensandwich"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image5"
                android:layout_marginTop="15dp"
                android:text="Fried chicken sandwich with fries"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image5"
                android:layout_below="@id/text7"
                android:text="Famous caesar salad with grilled chicken and croutons"
                android:textSize="10sp"/>

            <CheckBox
                android:id="@+id/checkbox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text8"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image5"
                android:text="40 NIS" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="200dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/caesarsalad"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image4"
                android:layout_marginTop="15dp"
                android:text="Caesar Salad with chicken"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image4"
                android:layout_below="@id/text5"
                android:text="Famous caesar salad with grilled chicken and croutons"
                android:textSize="10sp"/>

            <CheckBox
                android:id="@+id/checkbox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text6"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image4"
                android:text="35 NIS"/>

        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:onClick="applyonClick"
            ></Button>
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>